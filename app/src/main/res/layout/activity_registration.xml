<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="match_parent"
        android:layout_height="24sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="48dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Имя"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/username_registration"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_txt"
        android:layout_marginStart="16dp"
        android:hint="Введите имя"
        android:textColorHint="@color/light_grey" />

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_below="@+id/username_registration"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Почта"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_txt"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Введите почту"
        android:textColorHint="@color/light_grey" />

    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_below="@+id/email_registration"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Пароль"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_txt"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Введите пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/light_grey" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/password_registration"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/dark_blue"
        android:text="Зарегистрироваться" />

</RelativeLayout>