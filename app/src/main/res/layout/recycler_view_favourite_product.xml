<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_url_product_favourite_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_product_favourite_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/img_url_product_favourite_view"
            android:text="TextView"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currency_product_favourite_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/price_product_favourite_view"
            android:text="TextView"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_product_favourite_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_product_favourite_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_url_product_favourite_view"
            android:text="TextView"
            android:textColor="#000" />


        <Button
            android:id="@+id/btn_delete_product_favourite_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/name_product_favourite_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_url_product_favourite_view"
            android:text="Удалить"
            android:textSize="8sp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>