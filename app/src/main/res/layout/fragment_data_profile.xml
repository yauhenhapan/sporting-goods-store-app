<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DataProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Имя"
            android:textColor="#000"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/edit_user_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_view"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Введите имя"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/user_surname_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_user_name_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Фамилия"
            android:textColor="#000"

            android:textSize="25sp" />


        <EditText
            android:id="@+id/edit_user_surname_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_surname_view"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Введите фамилию"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"/>


        <Button
            android:id="@+id/btn_safe_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#000"
            android:text="Сохранить" />
    </RelativeLayout>


</FrameLayout>